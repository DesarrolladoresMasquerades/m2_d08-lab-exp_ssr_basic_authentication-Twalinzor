<form action="/auth/signup" method="POST">
  <label for="username">USERNAME:</label>
  <input
    type="text"
    name="username"
    minlength="3"
    maxlength="10"
    placeholder="Username"
    required
  />

  <label for="password">PASSWORD:</label>
  <input
    type="password"
    name="password"
    id="password"
    placeholder="*****"
    required
  />

  <button>SIGN UP!</button>
</form>

{{#if errorMessage}}
  <p>{{errorMessage}}</p>
{{/if}}